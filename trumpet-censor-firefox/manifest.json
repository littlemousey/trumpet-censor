{
  "manifest_version": 2,
  "name": "Color-Coded Text Filter",
  "version": "1.0",
  "description": "Colors political text and shows silly jokes on hover for a more engaging browsing experience",
  
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_firefox.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Color-Coded Text Filter",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  
  "applications": {
    "gecko": {
      "id": "color-text-filter@example.com",
      "strict_min_version": "57.0"
    }
  }
}